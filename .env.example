# Storage Configuration (Choose one)
# Option 1: Vercel KV (Automatically configured in Vercel Dashboard)
# KV_URL=your_kv_url
# KV_REST_API_URL=your_kv_rest_api_url
# KV_REST_API_TOKEN=your_kv_rest_api_token
# KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token

# Option 2: Upstash Redis (Free tier available)
# Sign up at https://upstash.com and create a Redis database
UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here

# Email Provider Configuration
# Options: resend (recommended for Vercel), sendgrid, smtp
EMAIL_PROVIDER=resend

# Resend Configuration (Recommended for Vercel)
RESEND_API_KEY=re_YOUR_API_KEY

# SendGrid Configuration (Alternative)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=SG.YOUR_API_KEY

# SMTP Configuration (Alternative)
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Default Email Settings
DEFAULT_FROM_EMAIL=onboarding@resend.dev

# JWT Secret for email verification
JWT_SECRET=your-secret-key-here

# App URL (for production)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app